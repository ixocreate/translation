{
    "name": "ixocreate/translation-package",
    "description": "IXOCREATE Translation Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE",
            "email": "opensource@ixocreate.com",
            "homepage": "https://www.ixocreate.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "ixocreate/application": "^0.3.0",
        "ixocreate/admin-package": "^0.4.0",
        "symfony/finder": "^5.2",
        "symfony/translation": "^5.2",
        "nikic/php-parser": "^4.4"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "ixocreate/test": "^0.2"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Test\\Translation\\": "tests/src/",
            "Ixocreate\\Misc\\Translation\\": "tests/misc/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
