{
    "name": "ixocreate/translation-package",
    "description": "IXOCREATE Translation Package",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ixocreate/application": "^0.2",
        "ixocreate/admin-package": "^0.3",
        "symfony/translation": "^4.1",
        "nikic/php-parser": "^4.0"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^2.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Translation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ixocreate\\Test\\Translation\\": "tests/src/",
            "Ixocreate\\Misc\\Translation\\": "tests/misc/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
